datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Centre {
  id           String        @id @default(uuid())
  name         String
  appointments Appointment[]

}

model Appointment {
  id       String   @id @default(uuid())
  time     DateTime
  centreId String
  centre   Centre   @relation(fields: [centreId], references: [id])

  available Boolean


  @@unique([time, centreId])
}
